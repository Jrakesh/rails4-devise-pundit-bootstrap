<h3>Roles</h3>
<div class="span8">
  <table class="table table-condensed">
    <thead>
      <tr>
        <th>Name</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @roles.each do |role| %>
        <tr>
          <td>
            <%= role.name.titleize %>
          </td>
          <td>
            <%= link_to 'Show', role %>
          </td>
          <td>
            <%= link_to 'Edit', edit_role_path(role) %>
          </td>
          <td>
            <%= link_to 'Destroy', role, :method => :delete, :data => { :confirm => 'Are you sure?' }, :class => 'btn btn-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br/>
<%= link_to 'New Role', new_role_path, :class => 'btn btn-primary' %>