%h3 Roles
.span8
  %table.table.table-condensed
    %thead
      %tr
        %th Name
        %th
        %th
        %th
    %tbody
      - @roles.each do |role|
        %tr
          %td= role.name.titleize
          %td= link_to 'Show', role
          %td= link_to 'Edit', edit_role_path(role)
          %td= link_to 'Destroy', role, :method => :delete, :data => { :confirm => 'Are you sure?' }, :class => 'btn btn-danger'

%br

= link_to 'New Role', new_role_path, :class => 'btn btn-primary'
